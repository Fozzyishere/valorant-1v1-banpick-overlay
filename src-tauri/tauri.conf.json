{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "new-admin-client",
  "version": "0.1.0",
  "identifier": "com.new-admin-client.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Valorant Tournament Admin",
        "width": 1280,
        "height": 720,
        "minWidth": 1280,
        "minHeight": 720,
        "resizable": true,
        "fullscreen": false,
        "label": "main"
      },
      {
        "title": "OBS Overlay",
        "width": 1920,
        "height": 1080,
        "resizable": false,
        "fullscreen": false,
        "decorations": false,
        "alwaysOnTop": false,
        "visible": false,
        "label": "overlay",
        "url": "/overlay.html"
      }
    ],
    "security": {
      "csp": null
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
